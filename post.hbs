{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        <div class="post-meta">
			{{#if featured}}<span style="color: #ff8c00;"><i class="fas fa-fire" title="FEATURED POST!"></i></span>{{/if}}
			<time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date published_at format="DD.MM.YYYY"}}</time> &#8729; 
			{{#primary_tag}}
				<a href="{{url}}" title="{{name}} tag archive link">{{name}}</a>
			{{/primary_tag}}
			&#8729; <a href="{{url}}#commento" class="commento-count-pre"></a>
		</div>
        
			<h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
		
        </header>

        <section class="post-content">
			{{^has tag="#nofeatimg"}}
				{{#if feature_image}}
					{{> post-img}}
				{{/if}}
			{{/has}}

            {{content}}
			
			<div class="tagwrapper">
				{{#if tags}}
					<div class="post-data tags">Tags: {{tags prefix="" separator=", "}}</div>
				{{/if}}
				<div class="postshare">
					<ul>
					<li class="postshare-fb">
						<a title="Share to Fackbook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share', 'width=580, height=296'); return false;"><i class="fab fa-facebook"></i></a>
					</li>
					<li class="postshare-tw">
						<a title="Share to Twitter" href="https://twitter.com/share?text={{encode title}}&url={{url absolute='true'}}" onclick="window.open(this.href, 'twitter-share', 'width=550, height=235'); return false;"><i class="fab fa-twitter"></i></a>
					</li>
					</ul>
				</div>
			</div>
        </section>
		
		<section class="post-nav">
			{{#prev_post}}
				<div class="post-nav-left"><a href="{{url}}"><span class="post-nav-arrows">&#xab; previous</span><span class="post-nav-link">{{title}}</span></a></div>
			{{/prev_post}}

			{{#next_post}}
				<div class="post-nav-right"><a href="{{url}}"><span class="post-nav-arrows">next &#xbb;</span><span class="post-nav-link">{{title}}</span></a></div>
			{{/next_post}}
		</section>
		
		<section class="post-related">
			{{> related-posts}}
		</section><!-- ok -->

		<footer class="post-footer">
            {{#primary_author}}
            <section class="author">
                <div class="authorimage" style="background: url({{profile_image}})"></div>
				<div class="authordesc">
					<h4><a href="{{url}}">{{name}}</a></h4>
					<p class="bio">{{bio}}</p>
					<ul class="authorlinks">
						{{#if twitter}}<li><a href="{{twitter_url}}" class="social-twitter"><i class="fab fa-twitter" title="author twitter icon"></i></a></li>{{/if}}
						{{#if facebook}}<li><a href="{{facebook_url}}" class="social-facebook"><i class="fab fa-facebook" title="author facebook icon"></i></a></li>{{/if}}
						{{#if website}}<li><a href="{{website}}"><i class="fal fa-link" title="author website icon"></i></a></li>{{/if}}
					</ul>
				</div>
			</section>
            {{/primary_author}}
			
			<script defer src="https://comments.d381.xyz/js/commento.js" data-css-override="{{asset "css/commento.css"}}"></script>
			<div id="commento"></div>
        </footer>

        {{/post}}

    </article>

</main>
