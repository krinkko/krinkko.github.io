<figure class="post-image">
	<a href="{{url}}" class="feature_image_link" name="{{{title}}}" data-featherlight="{{img_url feature_image}}">
		<img class="feature_image lazy" srcset="{{img_url feature_image size="s"}} 400w,
        {{img_url feature_image size="m"}} 560w,
        {{img_url feature_image size="l"}} 1024w,
        {{img_url feature_image size="xl"}} 2000w"
		sizes="(max-width: 999px) 400px; (min-width: 1000px) 560px, 100vw"
		src="{{img_url feature_image size="m"}}"
        data-src="{{img_url feature_image size="m"}}"
		alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" width="560">
	</a>
{{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
{{/if}}
</figure>